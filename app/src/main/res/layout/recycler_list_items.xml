<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:text="@string/btc_value_label"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/resultLabel"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:textSize="14sp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balanceLabel"
        android:textStyle="bold"
        android:text="@string/balance_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultLabel"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/balanceLabel"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"


        />
    <TextView
        android:id="@+id/timeLabel"
        android:text="@string/time_label"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintLeft_toRightOf="@+id/time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"




        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/timeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StatusLabel"
        android:text="@string/status_label"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel"
        app:layout_constraintLeft_toRightOf="@+id/time"
        app:layout_constraintRight_toRightOf="@+id/balance"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"


        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/balanceLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"


        />

</android.support.constraint.ConstraintLayout>